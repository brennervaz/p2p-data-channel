{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
