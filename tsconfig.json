{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "tsc-alias",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
