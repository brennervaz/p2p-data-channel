{
  "name": "p2p-data-channel",
  "version": "1.4.4",
  "description": "Peer-to-peer (P2P) data channel over WebRTC and a signaling channel on the browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c --bundleConfigAsCjs && dts-bundle-generator -o dist/index.d.ts ./src/index.ts",
    "lint": "eslint --ext .ts src/",
    "lint-watch": "esw --watch --ext .ts src/",
    "watch": "jest --watch",
    "test": "echo ok",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "npm run build && husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brennervaz/p2p-data-channel.git"
  },
  "keywords": [
    "webrtc",
    "peer",
    "to",
    "peer",
    "p2p",
    "data",
    "channel",
    "WebRTC",
    "PeerJS",
    "signaling",
    "web",
    "development",
    "TypeScript",
    "JavaScript",
    "library",
    "open",
    "source",
    "communication",
    "real-time",
    "messaging"
  ],
  "author": "Brenner Vaz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brennervaz/p2p-data-channel/issues"
  },
  "homepage": "https://github.com/brennervaz/p2p-data-channel#readme",
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-replace": "^5.0.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "^18.14.1",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "dts-bundle-generator": "^7.2.0",
    "eslint": "^8.34.0",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rollup": "^3.17.2",
    "rollup-plugin-typescript2": "^0.34.1"
  },
  "dependencies": {
    "peerjs": "^1.4.7",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,tsx}": "prettier --write"
  }
}
